{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% set title = title is defined ? title : '' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block navbar_title %}
    {{ block('title') }}
{% endblock %}

{% block content %}
    {{  parent() }}
{% endblock %}


{% block sonata_top_nav_menu_add_block %}
    {% include '@EduBox/Block/add_block.html.twig' %}
{% endblock %}

{% block sonata_sidebar_search %}
    {% include '@EduBox/Block/sidebar_top_block.html.twig' %}
{% endblock %}

{% block sonata_breadcrumb %}
{% endblock %}

{% block body_attributes %}
    class="sonata-bc fixed {% if app.request.getSession.get('_theme') == 'dark' %}skin-blue{% else %}skin-blue-light{% endif %}
    {% if app.request.cookies.get('sonata_sidebar_hide') -%}
        sidebar-collapse
    {%- endif -%}"
{% endblock %}

{% block side_bar_after_nav %}
{% endblock %}